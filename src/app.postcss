@import url('https://fonts.googleapis.com/css2?family=Indie+Flower&display=swap');

@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap');

@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap');


/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

.card {
    @apply rounded p-8 bg-stone-900 text-white
}

.sub-card {
    @apply rounded-lg p-4 bg-black text-white bg-stone-700
}

label {
    @apply text-xs text-white opacity-75 px-2;
}

.card-title {
    @apply text-white font-extralight text-3xl border-stone-500 border-b-2 border-opacity-25 py-2 mb-2
}

hr {
    @apply border-stone-500 border-b-2 my-2 border-opacity-25
}

.subtitle {
    @apply text-white font-extralight text-xl border-zinc-500 border-b py-1 border-opacity-25
}

input, .action {
    @apply p-4 rounded-lg bg-stone-600 transition px-6 text-stone-200 w-full my-1;
}

select {
    @apply p-4 rounded-lg bg-stone-600 transition px-6 text-stone-200 w-full ;
}

.formContainer {
    @apply flex w-full md:w-2/4 place-content-center md:flex-row flex-col items-center mt-4
}

.autocomplete {
    @apply w-full text-white py-2 px-4 my-4 opacity-50 hover:opacity-75 transition rounded bg-white
}

.autocompleted {
    @apply block my-1 text-zinc-500 transform hover:scale-105 w-full opacity-75 hover:text-black transition cursor-pointer font-semibold
}

button, .button {
    @apply bg-stone-800 px-4 text-white font-semibold p-2 rounded w-full transition opacity-75 hover:opacity-100
}

.label {
    @apply bg-white relative border-0 print:border-y-2 border-gray-200 border-dashed 
}

.label {
    overflow: hidden;
    position: relative;
}

.label-action {
    @apply p-4 bg-stone-500 text-white
}

.header {
    -webkit-print-color-adjust: exact;
    @apply flex justify-between p-2 text-white
}

.main {
    @apply flex justify-between p-6
}

.footer {
    @apply place-items-end flex justify-between p-6
}

.name, .flight-no {
    @apply font-bold text-6xl
}

.path {
    @apply flex gap-2 font-bold text-4xl
}

.bg {
  opacity: 0.1;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 180%;
  fill: white;
  transform: scaleX(-1);
}

.cut {
    @apply my-4 text-center
}

.saved {
    @apply w-full grid grid-cols-5 gap-2 text-white py-2 px-4 my-4 opacity-50 hover:opacity-75 transition rounded bg-white
}

.saved-entry {
    @apply inline my-1 text-zinc-500 transform hover:scale-105 w-full opacity-75 hover:text-black transition cursor-pointer font-semibold
}

.back {
    @apply opacity-50 hover:opacity-75 transition cursor-pointer;
}

.theme {
    @apply opacity-50 hover:opacity-75 transition cursor-pointer text-left block;
}

.progress-container {
    @apply w-2/4 mb-4 bg-gray-200 rounded-full dark:bg-gray-700
}

.progress {
    @apply bg-white text-xs font-medium text-stone-900 text-center p-1 leading-none rounded-full
}

.arrow {
    @apply hidden md:flex place-items-center text-3xl mx-4 opacity-50
}

.portag {
    @apply p-1 bg-stone-600 text-white font-semibold px-2 rounded w-full h-full place-items-center grid
}

.airportDisplay {
    @apply font-extrabold text-5xl flex justify-between md:grid grid-cols-3 gap-4 place-items-center
}